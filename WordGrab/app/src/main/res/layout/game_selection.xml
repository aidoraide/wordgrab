<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.soswag.aidan.wordgrab.GameSelectionActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="@color/colorSecondary"
    >

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </Space>

    <ImageView android:id="@+id/title_screen_title"
        android:background="@color/colorSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/gamemode"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton android:id="@+id/gameselect_rack_button"
            android:background="@color/colorSecondary"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/rack_button"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton android:id="@+id/gameselect_unscramble_button"
                     android:background="@color/colorSecondary"
                     android:adjustViewBounds="true"
                     android:scaleType="centerInside"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:src="@drawable/unscramble_button_inactive"
            />


        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton android:id="@+id/gameselect_grid_button"
                     android:background="@color/colorSecondary"
                     android:adjustViewBounds="true"
                     android:scaleType="centerInside"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:src="@drawable/gridbuttoninactive"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

    </LinearLayout>

    <TextView
        android:id="@+id/game_select_mode_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rack"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/game_select_mode_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_mode_description_rack"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </Space>

    <ImageView android:id="@+id/game_select_difficulty"
        android:background="@color/colorSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/difficulty_tile_img"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton android:id="@+id/game_select_difficulty_easier"
            android:background="@color/colorSecondary"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:layout_weight="1.5"
            android:src="@drawable/change_dif_button"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.5" >
        </Space>

        <ImageView android:id="@+id/game_select_difficulty_display"
            android:background="@color/colorSecondary"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:src="@drawable/difficulty_image_green"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.5" >
        </Space>

        <ImageButton android:id="@+id/game_select_difficulty_harder"
            android:background="@color/colorSecondary"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:layout_weight="1.5"
            android:src="@drawable/change_dif_button"
            android:rotation="180"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.5" >
    </Space>


    <ImageButton android:id="@+id/game_select_play_button"
        android:background="@color/colorSecondary"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_gravity="center_vertical"
        android:src="@drawable/playpurple"
        />


    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.5" >
    </Space>

</LinearLayout>